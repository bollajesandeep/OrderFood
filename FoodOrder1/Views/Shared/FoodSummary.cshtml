@model Food

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src='~/images/@Model.ImageThumbnailUrl' alt=""/>
        <div class="caption">
            <h3 class="pull-right">Rs. @Model.Price.ToString()</h3>
            <h3><a asp-controller="Food" asp-action="Details" asp-route-foodId="@Model.FoodId">@Model.Name</a> </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart text-right">
            <p class="button">
                <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-foodId="@Model.FoodId">
                    Place Order
                </a>
            </p>
        </div>

    </div>
</div>